{
    "id": "claude-commands",
    "version": "1.0.0",
    "name": "Claude Commands",
    "description": "Clones a GitHub repository into .claude/commands directory for Claude integration",
    "options": {
        "repo": {
            "type": "string",
            "description": "GitHub repository in format 'owner/repo' to clone into .claude/commands",
            "default": ""
        },
        "branch": {
            "type": "string",
            "description": "Branch to clone (default: main)",
            "default": "main"
        }
    },
    "containerEnv": {
        "CLAUDE_COMMANDS_REPO": "${repo}"
    },
    "installsAfter": [
        "ghcr.io/devcontainers/features/common-utils"
    ]
}