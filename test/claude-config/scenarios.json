{
    "basic": {
        "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
        "features": {
            "claude-config": {}
        }
    },
    "with_repo": {
        "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
        "features": {
            "claude-config": {
                "repo": "octocat/Hello-World",
                "branch": "master"
            }
        }
    },
    "with_nonexistent_repo": {
        "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
        "features": {
            "claude-config": {
                "repo": "nonexistent/nonexistent-repo"
            }
        }
    },
    "alpine_base": {
        "image": "mcr.microsoft.com/devcontainers/base:alpine",
        "features": {
            "claude-config": {
                "repo": "octocat/Hello-World",
                "branch": "master"
            }
        }
    }
}